
<script src="https://www.google.com/recaptcha/api.js?hl=en" async defer></script>
 <div class="auth_container">

<div class="container ">
  <div class="row">

    <div class="col s12 m6 push-l6 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8 inside_auth">

    <form class="col s12" method="POST" action="/auth/user_Login">
      <h4 class="center">Sign in</h4>
      <div class="row ">
        <div class="input-field col  s10 m10 push-l1 ">
          <i class="material-icons prefix">email</i>
          <input id="user" type="text" class="validate" name="username" value="{{Email}}" required />
          <label for="user">User Name</label>
          <span class="helper-text"data-error="This field cannot be left blank" data-success=""></span>
        </div>
      </div>
      <div class="row mr-top">
        <div class="input-field col  s10 m10 push-l1 mr-top">
          <i class="material-icons prefix">account_circle</i>
          <input id="password" type="password" class="validate" name="password" required minlength="3"/>
          <label for="password">Password</label>
           <span class="helper-text" data-error="Password minimum 3 characters" data-success=""></span>
        </div>
      </div>
     <div class="row mr-top">
        <div class="input-field col s6 push-l3">
   <div class="g-recaptcha" data-sitekey="6LcaRC0cAAAAAGZJCCINa2WiMLhJ8P1EfJ8O4SPs"></div>
        </div>
      </div>
       <div class="row mr-top">
        <div class="input-field col s10 m10 push-l1" style="transform: translateY(-33px);">
             {{#if error_message}}
              <div class="noti-login">

          
            <div class="isa_error message-info" style="">
                <i class="fa fa-times-circle"></i>
          <span>{{error_message}}</span> 
            </div>
              </div>
              {{/if}}
                {{#if message}}
              <div class="noti-login">
              <div class="isa_info message-info" style="">
                <i class="fa fa-check"></i>
               <span>{{message}}</span> 
              </div>
              </div>
              {{/if}}
        </div>
      </div>  
        <div class="row">
        <div class="input-field col s10 m10 push-l1 mr-top">
          <button
            class="btn waves-effect waves-light btn_login "
            type="submit">Login
          </button>
        </div>
         <div class="input-field col s12 mr-top">
           <a class="left text-purple" href="/auth/signup_email">Register Now !</a>
           <a class="right text-purple" href="/auth/forgotPassword">Forgot Account ? </a>
           </div>
      </div>     
     
    

    </form>

    </div>
     </div>
    
  </div>
 </div>
</div>