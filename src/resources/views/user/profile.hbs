{{>header}}
<div class="main-profile"> 
            <div class="container-user">
                <div class="row">
                    <div class="col m3 push-l2">
                         <img style="height:28%;width:70%"class="circle"src="../uploads/{{account.avatar}}"/>
                    </div>
                     <div class="col m9 push-l2">
                      <div class="row">
                           <h4> {{account.username}} ({{ mergeName account.last_name account.first_name}} )</h4>
                            <a href="/profile/editPage">Edit Profile</a>
                      </div>
                       <div class="row">
                           <span> 1 Post </span>
                           <span> 2 Followers </span>
                           <span>2 Following</span>
                      </div>
                        <div class="row">
                           <span> {{account.bio}} </span>   
                      </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col m3 s3">
                  <ul class="collection with-header">
                 <li class="collection-header"><h7>My Information</h7></li>
                 <li class="collection-item"><div>Job : {{account.job}}<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div></li>
                <li class="collection-item"><div>Name : {{ mergeName account.last_name account.first_name}} <a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div></li>
                <li class="collection-item"><div>Gender :{{convertGender account.gender}} <a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div></li>
                <li class="collection-item"><div>Birthday : {{ convertDate account.birthday}}<a href="#!" class="secondary-content"><i class="material-icons">send</i></a></div></li>
                 </ul>
                  </div>
                  <div class="col m9 s9">   
                    <div class="row">
                     <div class="col s10 m10">
                       <div class="card">
                         <div class="card-image">
                           <img src="../img/Feed-amico.png">
                             <span class="card-title">havietluc@1223</span>
                         </div>
                        <div class="card-content">
                        <p>
                            social networking site in Node JS and Mongo DB
                        </p>
                          </div>
                          <div class="card-action">
                      <a href="#">Like</a>
                       <a href="#">Comment</a>
                        <a href="#">Share</a>
                       </div>
                         </div>
                        </div>
                     </div>
                  </div>
                </div>
            </div>


</div>